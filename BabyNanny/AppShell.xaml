<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:BabyNanny.Views"
    x:Class="BabyNanny.AppShell">
    <Shell.TitleView>
        <Label Text="{Binding SelectedChildName}" HorizontalOptions="Center" VerticalOptions="Center" />
    </Shell.TitleView>

    <FlyoutItem Title="Menu">
        <TabBar>
            <ShellContent Title="Home" Icon="home.png" Route="home" ContentTemplate="{DataTemplate views:HomePage}" />
            <ShellContent Title="Stats" Icon="stats.png" Route="stats" ContentTemplate="{DataTemplate views:StatsPage}" />
        </TabBar>
    </FlyoutItem>

    <MenuItem Text="Settings" Clicked="OnSettingsClicked" />
</Shell>
